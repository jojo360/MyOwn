<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.digitecgame.myown.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le Module : "
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:id="@+id/textView" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="19dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="49dp" />

    //TD

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/listView"
        android:layout_marginTop="39dp"
        android:text="Td : "
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:ems="8"
        android:textSize="15dp" />


    //TP

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/A"
        android:layout_marginTop="37dp"
        android:text="TP : "
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:ems="8"
        android:textSize="15dp" />

    //Examen

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/C"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:text="Examen :"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/B"
        android:layout_alignRight="@+id/B"
        android:layout_below="@+id/B"
        android:layout_marginTop="29dp"
        android:ems="5"
        android:textSize="15dp" />


    //Moyenne

    <ImageView
        android:id="@+id/btn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/C"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/A"
        android:layout_toRightOf="@+id/A"
        android:padding="5dp"
        android:src="@drawable/ic_functions" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn"
        android:layout_alignStart="@+id/btn"
        android:layout_below="@+id/btn"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:ems="8"
        android:text="Module"
        android:textColor="@android:color/holo_red_dark"
        />




    //Semestre

    <ImageView
        android:id="@+id/btnm"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btn"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:padding="5dp"
        android:src="@drawable/ic_grade"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/btnm"
        android:ems="10"
        android:id="@+id/textView5"
        android:text="Semestre"
        android:textColor="@android:color/holo_purple"
        />










</RelativeLayout>
